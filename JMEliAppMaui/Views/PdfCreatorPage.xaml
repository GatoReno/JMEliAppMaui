<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JMEliAppMaui.Views.PdfCreatorPage"
             xmlns:viewmodel="clr-namespace:JMEliAppMaui.ViewModels"
             x:DataType="viewmodel:PdfCreatorViewModel"
             Title="PdfCreatorPage">
    <VerticalStackLayout Spacing="10">
        <Label Text="Elige una de las opciones"
            HorizontalTextAlignment="Center"
            FontSize="20"/>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Sign" Command="{Binding SignCommand}" WidthRequest="100"/>
            <Button Text="Preview" Command="{Binding PreviewCommand}" WidthRequest="100"/>
            <Button Text="Update" Command="{Binding UpdateCommand}" WidthRequest="100"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>