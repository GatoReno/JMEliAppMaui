<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JMEliAppMaui.Popups.SignPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:JMEliAppMaui.Popups"
             CanBeDismissedByTappingOutsideOfPopup="False"
             x:DataType="local:SignPopup">

    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="Fill"
      RowDefinitions="*,50,50" ColumnDefinitions="*,*"
      ColumnSpacing="10" RowSpacing="10" Padding="8"
      Margin="10">

        <toolkit:DrawingView LineColor="Black" LineWidth="2" 
                         Lines="{Binding Lines}" IsMultiLineModeEnabled="True" 
                         ShouldClearOnFinish="False" HeightRequest="200" WidthRequest="300"
                         Grid.ColumnSpan="2" Grid.Row="0"/>

        <Button Grid.Row="1" Grid.Column="0"  
            Text="Save" Clicked="SaveButton_Clicked" />

        <Button Grid.Row="1" Grid.Column="1"  
            Text="Clear" Clicked="ClearButton_Clicked" />

        <Button Text="Cancel" Grid.Row="2"  
            Grid.ColumnSpan="2" Clicked="CancelButton_Clicked"/>

    </Grid>

</toolkit:Popup>